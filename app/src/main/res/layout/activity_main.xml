<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>

    <ImageView
            android:id="@+id/happyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="132dp"
            android:src="@drawable/grin"/>
    <ImageView
            android:id="@+id/angryImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="132dp"
            android:src="@drawable/angry"/>

    <Button
            android:id="@+id/smileyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="488dp" android:layout_marginStart="0dp"
            android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
            android:text="Click here to be happy!"/>
</RelativeLayout>